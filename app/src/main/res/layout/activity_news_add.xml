<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="添加新闻"
        android:textColor="@color/white"
        android:textSize="17dp"/>

    <ScrollView
        android:id="@+id/sv"
        android:layout_margin="10dp"
        android:layout_below="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                style="@style/input_style"
                android:id="@+id/cid"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:hint="如果是比赛新闻就填写比赛的id,否则不填"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:hint="新闻列表里的标题"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/brief"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:hint="新闻列表里的简介"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content">

            </EditText>

            <EditText
                style="@style/input_style"
                android:id="@+id/e0"
                android:layout_width="match_parent"
                android:hint="标题"
                android:textSize="20dp"
                android:layout_height="wrap_content">
            </EditText>

            <EditText
                style="@style/input_style"
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:hint="图片1(本地存储路径,没有就不填写内容,下同)"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e2"
                android:layout_width="match_parent"
                android:hint="文本1(没有就不填写内容,下同)"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e3"
                android:layout_width="match_parent"
                android:hint="按钮1(填{reg,awa}之一,没有就不填写内容,下同)\nreg==跳转注册,awa==跳转获奖"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e4"
                android:layout_width="match_parent"
                android:hint="图片2"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e5"
                android:layout_width="match_parent"
                android:hint="文字2"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e6"
                android:layout_width="match_parent"
                android:hint="按钮2"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e7"
                android:layout_width="match_parent"
                android:hint="图片3"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e8"
                android:layout_width="match_parent"
                android:hint="文字3"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e9"
                android:layout_width="match_parent"
                android:hint="按钮3"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e10"
                android:layout_width="match_parent"
                android:hint="图片4"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e11"
                android:layout_width="match_parent"
                android:hint="文字4"
                android:layout_height="wrap_content">

            </EditText>
            <EditText
                style="@style/input_style"
                android:id="@+id/e12"
                android:layout_width="match_parent"
                android:hint="按钮4"
                android:layout_height="wrap_content">

            </EditText>
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/perShow"
                android:layout_width="80dp"
                android:background="@drawable/btn_sendmassage"
                android:layout_gravity="center_horizontal"
                android:text="预览"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_height="50dp">

            </Button>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>