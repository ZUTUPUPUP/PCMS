<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Manager.Edit.EditFragment">


    <RadioGroup
        android:id="@+id/rg_tab_bar_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_edit_news"
            style="@style/tab_menu_item"
            android:text="@string/tab_menu_news" />

        <RadioButton
            android:id="@+id/rb_edit_notice"
            style="@style/tab_menu_item"
            android:text="@string/tab_menu_notice" />


    </RadioGroup>

    <FrameLayout
        android:id="@+id/edit_fragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>