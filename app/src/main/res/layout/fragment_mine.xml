<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5f5"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="17dp"></TextView>
    <LinearLayout
        android:layout_below="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:background="@drawable/ll_mine_user">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/icon_username" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_mine_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@null"
                    android:ellipsize="middle"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:text="Max_n"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_mine_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:background="@null"
                    android:text="学号：20170802410x"
                    android:layout_marginLeft="8dp"
                    android:padding="3dp"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_mine_dep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:background="@null"
                        android:text="计算机学院"
                        android:layout_marginLeft="8dp"
                        android:padding="3dp"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv_mine_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="女"
                        android:layout_marginLeft="8dp"
                        android:padding="3dp"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_mine_update_msg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/item_mine_update_message_selector"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:background="@mipmap/icon_contestregistry"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="我的报名"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.4"
                    android:padding="8dp"
                    android:layout_marginRight="10dp"
                    android:onClick="findMineRegMessage"
                    android:background="@mipmap/icon_right"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:layout_height="200dp"
        android:text="文本框"
        android:gravity="center"
        android:textColor="@color/tomato"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt_content"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/educ"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="留言互动"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg1"
            />

        <Button
            android:id="@+id/contact"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/button_bg2"
            android:text="联系我们"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>



</RelativeLayout>