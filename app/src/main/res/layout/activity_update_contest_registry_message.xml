<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="修改用户报名信息"
        android:background="#ffffff"
        android:gravity="center"
        android:textSize="30sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_register_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="竞 赛："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_update_contesregmessage_contestname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="第十届校赛"
                android:textColor="@color/gray"
                android:background="@null"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#47acea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="学 号："
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_update_contesregmessage_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:text="201708024103"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#47acea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="姓 名："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_update_contesregmessage_relname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:text="孙艺苹"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/iv_update_contesregmessage_delRelName"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:onClick="click"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_del" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#47acea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="班 级："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_update_contesregmessage_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:text="计科171"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/iv_update_contesregmessage_delClass"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_del" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#47acea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="性 别："
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_update_contesregmessage_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:text="女"
                android:textColor="@color/gray"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#47acea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="学 院："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/tv_update_contesregmessage_depname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:text="计算机学院"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#47acea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="邮 箱："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_update_contesregmessage_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:text="1738871130@qq.com"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_update_contesregmessage_delEmail"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_del" />
        </LinearLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#47acea" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/btn_main_login"
        android:textColor="#ffffff"
        android:text="确    定"
        android:onClick="updateSubmit"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="该页面为重复修改,修改成功后请手动退出" />
    </RelativeLayout>

</LinearLayout>